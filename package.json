{
    "name": "whereby-assistant-audio-recorder",
    "version": "0.1.0",
    "private": true,
    "main": "src/index.js",
    "dependencies": {
        "@aws-sdk/client-s3": "^3.888.0",
        "@whereby.com/assistant-sdk": "1.1.0",
        "dotenv": "^16.4.5"
    },
    "devDependencies": {
        "@types/node": "^24.5.2",
        "@types/web": "^0.0.267",
        "eslint": "^9.29.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "prettier": "^3.6.2",
        "tsx": "4.20.3",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.44.0"
    },
    "scripts": {
        "build": "rm -rf dist && yarn tsc -p tsconfig.build.json",
        "build:docker": "yarn build && docker build --platform linux/amd64 -f ./Dockerfile .",
        "build:docker:local": "sh scripts/build-local-docker.sh",
        "clean": "rm -rf dist node_modules",
        "dev": "tsx src/index.ts",
        "lint": "npx eslint src/",
        "start": "node ./dist/index.js",
        "start:local": "IS_LOCAL=true && API_BASE_URL=https://ip-127-0-0-1.hereby.dev:4090 SIGNAL_BASE_URL=wss://ip-127-0-0-1.hereby.dev:4070 sh scripts/update-sdk-base-url.sh && yarn build && yarn start",
        "aws:sam:init": "cd ./iac/base && sam build && sam deploy",
        "aws:sam:init:delete": "cd ./iac/base && sam delete",
        "aws:sam:build": "scripts/build-and-push-docker-image-to-aws-ecr.sh",
        "aws:sam:deploy": "cd ./iac && sam build && sam deploy --parameter-overrides DeploymentDatetime=`date '+%Y-%m-%dT%H:%M:%S'`",
        "aws:sam:deploy:delete": "cd ./iac && sam delete",
        "aws:sam:meta:endpointurl": "aws cloudformation --region eu-west-1 describe-stacks --no-cli-pager --stack-name whereby-assistant-audio-recorder --query \"Stacks[0].Outputs[?OutputKey=='FQDN'].OutputValue\" --output text",
        "aws:sam:meta:logs:tail": "sam logs --region eu-west-1 --cw-log-group /wherebyassistantaudiorecorder --tail"
    }
}
